@model Entities.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form asp-controller="AdminLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form">
    <h3 class="form-title">Đăng nhập hệ thống</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewBag.BrowserName == "IE")
    {
        <div class="alert alert-danger">
            <h4>
                - Quí vị đang truy cập bằng trình duyệt @ViewBag.BrowserName (Internet Explorer)<br /><br />
                - Ứng dụng chỉ hoạt động với các trình duyệt: Chrome; CocCoc; Edge hoặc FireFox
                <br />
            </h4>
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="LoginName" class="control-label visible-ie8 visible-ie9"></label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input asp-for="LoginName" class="form-control placeholder-no-fix" autocomplete="nope" placeholder="Tên truy cập" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
            <label asp-for="Password" class="control-label visible-ie8 visible-ie9"></label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input asp-for="Password" class="form-control placeholder-no-fix" type="password" autocomplete="nope" placeholder="Mật khẩu" />
            </div>
        </div>
        <div class="form-actions">
            <label class="rememberme mt-checkbox mt-checkbox-outline">
            </label>
            <button type="submit" class="btn green pull-right"> Đăng nhập <i class="fa fa-sign-in"></i> </button>
        </div>
    }
    <p class="text-center">
        @if (DateTime.Now.Year <= 2021)
        {
            <span>2021</span>
        }
        else
        {
            <span>2021-@DateTime.Now.Year</span>
        }
        &copy;
        NamMV
    </p>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}