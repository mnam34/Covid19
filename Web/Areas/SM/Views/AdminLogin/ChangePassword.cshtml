@model Entities.ViewModels.UserChangePassword
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_ChangePasswordLayout.cshtml";
}
<form asp-controller="AdminLogin" method="post" class="login-form">
    <h3 class="form-title">Đổi mật khẩu</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewBag.BrowserName == "IE")
    {
        <div class="alert alert-danger">
            <h4>
                - Quí vị đang truy cập bằng trình duyệt @ViewBag.BrowserName (Internet Explorer)<br /><br />
                - Ứng dụng chỉ hoạt động với các trình duyệt: Chrome; CocCoc; Edge hoặc FireFox
                <br />
            </h4>
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label visible-ie8 visible-ie9"></label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input asp-for="OldPassword" class="form-control placeholder-no-fix" type="password" autocomplete="nope" placeholder="Mật khẩu hiện tại" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
            <label asp-for="NewPassword" class="control-label visible-ie8 visible-ie9"></label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input asp-for="NewPassword" class="form-control placeholder-no-fix" type="password" autocomplete="nope" placeholder="Mật khẩu mới" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Mật khẩu</label>
            <label asp-for="ConfirmPassword" class="control-label visible-ie8 visible-ie9"></label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input asp-for="ConfirmPassword" class="form-control placeholder-no-fix" type="password" autocomplete="nope" placeholder="Xác nhận mật khẩu mới" />
            </div>
        </div>
        <div class="form-actions">
            <label class="rememberme mt-checkbox mt-checkbox-outline">
            </label>
            <button type="submit" class="btn green "> Đồng ý <i class="fa fa-sign-in"></i> </button>&nbsp;&nbsp;&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn"> Hủy bỏ <i class="fa fa-times"></i> </a>
        </div>
    }
    <p class="text-center">
        @if (DateTime.Now.Year <= 2021)
        {
            <span>2021</span>
        }
        else
        {
            <span>2021-@DateTime.Now.Year</span>
        }
        &copy;
        NamMV
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
