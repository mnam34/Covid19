@model Entities.ViewModels.UserChangePassword
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_ChangePasswordLayout.cshtml";
}
<form  method="get" class="login-form">
    <h3 class="form-title">Đổi mật khẩu thành công, vui lòng đăng nhập lại!</h3>
    <div class="form-actions">
        <label class="rememberme mt-checkbox mt-checkbox-outline">
        </label>
        <a asp-area="SM" asp-controller="AdminLogin" asp-action="Index" class="btn green pull-right"> Đăng nhập <i class="fa fa-sign-in"></i> </a>
    </div>
    <p class="text-center">
        @if (DateTime.Now.Year <= 2021)
        {
            <span>2021</span>
        }
        else
        {
            <span>2021-@DateTime.Now.Year</span>
        }
        &copy;
        NamMV
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
