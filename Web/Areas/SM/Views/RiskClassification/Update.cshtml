@model RiskClassificationUpdating
@{
    ViewData["Title"] = "Cập nhật Mức độ nguy cơ nhiễm bệnh";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-haze">
                    <i class="fa fa-plus font-green-haze"></i>
                    <span class="caption-subject bold ">@Html.Raw(ViewData["Title"])</span>
                </div>
                <div class="actions">
                    <a title="Mở rộng" data-original-title="" href="javascript:;" class="btn btn-circle btn-icon-only btn-default fullscreen"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form asp-controller="RiskClassification" asp-action="Update" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="Name" class="form-control first-focus" autocomplete="nope" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="OrdinalNumber" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="OrdinalNumber" class="form-control" autocomplete="nope" />
                                <span asp-validation-for="OrdinalNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green"><i class="fa fa-check"></i> Ghi nhận</button>
                                <a href="@Url.RouteUrl("RiskClassificationIndex")" cl class="btn default">Hủy bỏ</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}