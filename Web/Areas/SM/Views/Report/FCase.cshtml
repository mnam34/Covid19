@model IEnumerable<Report1>
@{
    ViewData["Title"] = "Báo cáo tổng hợp F-Case";
    var tableClass = ViewData["IsMobile"].ToString().ToLower() == "true" ? "table-scrollable" : "";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-puzzle-piece font-green-sharp "></i>
                    <span class="caption-subject font-green-sharp bold ">@Html.Raw(ViewData["Title"])</span>
                    <span>Cần làm thêm báo cáo theo ngày/lũy kế đến ngày</span>
                </div>
                <div class="actions">
                    <a href="javascript:;" data-action="0" class="tool-action btn green-jungle"><i class="fa fa-file-excel-o"></i> Kết xuất</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-container @tableClass">
                    <table class="table table-striped table-hover table-bordered" id="datatable_none_ajax_source">
                        <thead>
                            <tr>
                                <th rowspan="2" style="text-align:center; vertical-align:middle;">STT</th>
                                <th rowspan="2" style="text-align:center; vertical-align:middle;">Tên Vùng/Điểm dịch</th>
                                <th colspan="4" style="text-align:center; vertical-align:middle;">Ca F0</th>
                                <th colspan="4" style="text-align:center; vertical-align:middle;">Ca F0 từ Fx</th>



                                <th rowspan="2" style="text-align:center; vertical-align:middle;">Tổng số trường hợp F1</th>
                                <th rowspan="2" style="text-align:center; vertical-align:middle;">Tổng số trường hợp F2</th>
                                <th rowspan="2" style="text-align:center; vertical-align:middle;">Tổng số trường hợp F3</th>
                            </tr>
                            <tr>
                                <th style="text-align:center; vertical-align:middle;">Tổng số ca F0</th>
                                <th style="text-align:center; vertical-align:middle;">Đã chữa khỏi</th>
                                <th style="text-align:center; vertical-align:middle;">Đang điều trị</th>
                                <th style="text-align:center; vertical-align:middle;">Đã tử vong</th>

                                <th style="text-align:center; vertical-align:middle;">Tổng số ca F0 từ Fx</th>
                                <th style="text-align:center; vertical-align:middle;">Tổng số ca F0 từ F1</th>
                                <th style="text-align:center; vertical-align:middle;">Tổng số ca F0 từ F2</th>
                                <th style="text-align:center; vertical-align:middle;">Tổng số ca F0 từ F3</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int i = 0;
                                foreach (var item in Model.OrderByDescending(o => o.OutbreakDate))
                                {
                                    i++;

                                    <tr>
                                        <td style="text-align:center;">@i</td>
                                        <td>@Html.Raw(item.EpidemicAreaName)</td>
                                        <td>@item.TotalF0</td>
                                        <td>@item.IsCured</td>
                                        <td>@item.UnderTreatment</td>
                                        <td>@item.IsDead</td>
                                        <td>@item.TotalFromFx</td>
                                        <td>@item.TotalFromF1</td>
                                        <td>@item.TotalFromF2</td>
                                        <td>@item.TotalFromF3</td>
                                        <td>@item.TotalF1</td>
                                        <td>@item.TotalF2</td>
                                        <td>@item.TotalF3</td>
                                    </tr>

                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@section Styles{
    <link href="~/themes/m475/assets/global/plugins/datatables1.11.2/datatables.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/themes/m475/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />*@
}
