@{
    ViewData["Title"] = "Biểu đồ lây nhiễm F-case";
}
<div class="row">
    <div class="col-md-8">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bubble font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">Biểu đồ lây nhiễm F-case</span>
                </div>
                <div class="actions">
                    <select name="SelectEpidemicArea" id="SelectEpidemicArea" asp-items="@((SelectList)ViewData["EpidemicArea"])" class="form-control">
                        <option value="">---Chọn---</option>
                    </select>
                </div>
            </div>
            <div class="portlet-body">
                <div id="chart-container"></div>
                <div id="edit-panel" class="view-state">
                    <input type="text" id="key-word">
                    <button type="button" id="btn-filter-node">Tìm kiếm</button>
                    <button type="button" id="btn-cancel">Hủy</button>
                    <button type="button" class="my-class" onclick="clickExportButton();">Kết xuất</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bubble font-red"></i>
                    <span class="caption-subject font-red bold uppercase">Cây lây nhiễm F-case</span>
                </div>

            </div>
            <div class="portlet-body">                
                <input type="text" id="tree_q" value="" class="input" placeholder="Tìm kiếm..." style="margin:0em auto 1em auto; display:block; padding:4px; border-radius:4px; border:1px solid silver;">
                <div id="tree"></div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/lib/orgchart/css/jquery.orgchart.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/jstree-3312/dist/themes/default/style.min.css" rel="stylesheet" type="text/css" />
}
@section Styles2{
    <link href="~/themes/m475/assets/pages/css/chart-index.css" rel="stylesheet" type="text/css" />    
}
@section Scripts {
    <script src="~/lib/html2canvas.min.js" type="text/javascript"></script>    
    <script src="~/lib/orgchart/js/jquery.orgchart.js" type="text/javascript"></script>    
    <script src="~/lib/jstree-3312/dist/jstree.min.js" type="text/javascript"></script>
}
@section Scripts2 {
    <script src="~/themes/m475/assets/pages/scripts/chart-index.js" asp-append-version="true" type="text/javascript"></script>    
}
