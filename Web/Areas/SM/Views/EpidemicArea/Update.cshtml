@model EpidemicAreaUpdating
@{
    ViewData["Title"] = "Cập nhật Khu vực/vùng/điểm dịch";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-haze">
                    <i class="fa fa-plus font-green-haze"></i>
                    <span class="caption-subject bold ">@Html.Raw(ViewData["Title"])</span>
                </div>
                <div class="actions">
                    <a title="Mở rộng" data-original-title="" href="javascript:;" class="btn btn-circle btn-icon-only btn-default fullscreen"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form asp-controller="EpidemicArea" asp-action="Update" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="Name" class="form-control first-focus" autocomplete="nope" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProvinceId" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <select asp-for="ProvinceId" asp-items="@((SelectList)ViewData["Province"])" class="form-control">
                                    <option value="">---Chọn---</option>
                                </select>
                                <span asp-validation-for="ProvinceId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DistrictId" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <select asp-for="DistrictId" asp-items="@((SelectList)ViewData["District"])" class="form-control">
                                    <option value="">---Chọn---</option>
                                </select>
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CommuneId" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <select asp-for="CommuneId" asp-items="@((SelectList)ViewData["Commune"])" class="form-control">
                                    <option value="">---Chọn---</option>
                                </select>
                                <span asp-validation-for="CommuneId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="OutbreakDate" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="OutbreakDate" class="form-control date-picker" autocomplete="nope" />
                                <span asp-validation-for="OutbreakDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LockdownDate" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="LockdownDate" class="form-control date-picker" autocomplete="nope" />
                                <span asp-validation-for="LockdownDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UnLockdownDate" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="UnLockdownDate" class="form-control date-picker" autocomplete="nope" />
                                <span asp-validation-for="UnLockdownDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="col-md-3 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="EndDate" class="form-control date-picker" autocomplete="nope" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green"><i class="fa fa-check"></i> Ghi nhận</button>
                                <a href="@Url.RouteUrl("EpidemicAreaIndex")" cl class="btn default">Hủy bỏ</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link href="/themes/m475/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" type="text/css" />
}
@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="/themes/m475/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="/themes/m475/assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.vi.min.js" type="text/javascript"></script>
}
@section Scripts2 {
    <script src="~/themes/m475/assets/pages/scripts/common.js" type="text/javascript"></script>
    <script src="~/themes/m475/assets/pages/scripts/ea-create.js" type="text/javascript"></script>
}