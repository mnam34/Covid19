@model Role
@{
    ViewData["Title"] = "Cập nhật nhóm quyền";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-haze">
                    <i class="fa fa-edit font-green-haze"></i>
                    <span class="caption-subject bold "> @Html.Raw(ViewData["Title"])</span>
                </div>
                <div class="actions">
                    <a title="Mở rộng" data-original-title="" href="javascript:;" class="btn btn-circle btn-icon-only btn-default fullscreen"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form asp-controller="Role" asp-action="Update" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Code" class="col-md-2 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="Code" class="form-control first-focus" autocomplete="nope"  />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="Name" class="form-control" autocomplete="nope"  />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="col-md-2 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="Description" class="form-control" autocomplete="nope"  />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="OrdinalNumber" class="col-md-2 control-label"></label>
                            <div class="col-md-4">
                                <input asp-for="OrdinalNumber" class="form-control date-picker" autocomplete="nope"  />
                                <span asp-validation-for="OrdinalNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn green"><i class="fa fa-check"></i> Ghi nhận</button>
                                <a href="@Url.RouteUrl("RoleIndex")" class="btn default">Hủy bỏ</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}